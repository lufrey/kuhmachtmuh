---
import Layout from "../layouts/Layout.astro";
import Cow from "../images/cow.png";
import { getPicture } from "@astrojs/image";

const picture = await getPicture({
  src: Cow,
  widths: [300, 600],
  fit: "contain",
  background: "#00000000",
  formats: ["webp", "avif", "png"],
  position: "center",
  alt: "kuh",
});
---

<Layout title="kuh macht muh">
  <main
    class="flex items-center justify-center w-screen h-screen p-4 text-gray-300 bg-green-700"
  >
    <div class="flex flex-col items-center w-full max-w-lg text-center h-3/4">
      <div class="text-3xl">kuh macht muh</div>
      <div class="m-auto grow"></div>
      <div class="relative w-2/3 md:w-1/2">
        <picture class="block w-full">
          <source
            srcset={picture?.sources?.[0]?.srcset}
            type={picture?.sources?.[0]?.type}
            sizes={"(max-width: 600px) 300px, 100vw"}
          />
          <img {...picture.image} alt={"kuh"} class="w-full" />
        </picture>
        <div
          class="absolute right-0 p-4 text-gray-800 transition-opacity duration-200 bg-gray-300 rounded-full rounded-bl-none opacity-0 -top-10 md:-translate-x-full md:left-0 md:right-auto md:rounded-full md:rounded-tr-none md:top-20"
        >
          <div id="answer">Muh</div>
        </div>
      </div>
      <div class="p-4"></div>
      <div>
        <div class="text-xl">stell der kuh eine frage:</div>
        <div class="p-2"></div>
        <form class="flex flex-col">
          <input type="text" class="text-gray-800" />
          <button class="bg-green-900" id="submit-button" type="submit"
            >Fragen</button
          >
        </form>
      </div>
    </div>
  </main>

  <script>
    const submit = document.getElementById("submit-button");
    let timeout: number | undefined;
    const options = ["muh", "muuh", "mooo", "muh", "muuuuh"];

    if (submit)
      submit.onclick = (e) => {
        e.preventDefault();
        const answerEl = document.getElementById("answer");
        if (answerEl) {
          const random = Math.floor(Math.random() * options.length);
          answerEl.innerText = options[random] as string;
          answerEl.parentElement?.classList.remove("opacity-0");
          if (timeout) clearTimeout(timeout);
          timeout = setTimeout(() => {
            answerEl.parentElement?.classList.add("opacity-0");
          }, 3000);
        }
      };
  </script>
</Layout>
